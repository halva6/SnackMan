<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="820.0" prefWidth="800.0" styleClass="pane" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.halva6.snackman.view.StartScreenView">
   <center>
      <VBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="mainImageView" fitHeight="212.0" fitWidth="585.0" pickOnBounds="true" preserveRatio="true">
               <effect>
                  <Bloom />
               </effect>
            </ImageView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button id="level1-button" fx:id="level1Button" mnemonicParsing="false" onAction="#startLevel1" styleClass="level-button-style" stylesheets="@../styles/style.css" text="level1" textAlignment="CENTER">
                  </Button>
                  <Button id="level2-button" fx:id="level2Button" mnemonicParsing="false" onAction="#startLevel2" styleClass="level-button-style" stylesheets="@../styles/style.css" text="level2" textAlignment="CENTER">
                  </Button>
                  <Button id="level3-button" fx:id="level3Button" mnemonicParsing="false" onAction="#startLevel3" styleClass="level-button-style" stylesheets="@../styles/style.css" text="level3" textAlignment="CENTER">
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="small-text" text="Buildman Factory 2025" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Text>
   </bottom>
</BorderPane>
