<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="820.0" prefWidth="800.0" styleClass="pane" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.halva6.snackman.view.StartScreenView">
   <center>
      <VBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="mainImageView" fitHeight="212.0" fitWidth="585.0" pickOnBounds="true" preserveRatio="true">
               <effect>
                  <Bloom />
               </effect>
            </ImageView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Button fx:id="levelSelection" mnemonicParsing="false" onAction="#gotToLevelSelection" styleClass="button-style" text="Levels" />
                  <Button fx:id="randomLevel" mnemonicParsing="false" onAction="#startRandomLevel" styleClass="button-style" text="Random Level" />
                  <Button fx:id="exitGame" mnemonicParsing="false" onAction="#quitGame" styleClass="button-style" text="Exit Game" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="small-text" text="Buildman Factory 2025" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Text>
   </bottom>
</BorderPane>
