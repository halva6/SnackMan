<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="820.0" prefWidth="800.0" styleClass="pane" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.halva6.snackman.view.GameOverScreenView">
   <center>
      <VBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <Text fx:id="statusText" fill="#0a728d" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="heading-text" text="Lose/Win">
            </Text>
            <Text fx:id="pointsText" fill="#0a728d" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normal-text" text="Points" textAlignment="CENTER">
            </Text>
            <Text fx:id="timeText" fill="#0a728d" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normal-text" text="Time" textAlignment="CENTER" />
            <Button fx:id="restart" contentDisplay="CENTER" mnemonicParsing="false" onAction="#restartGame" styleClass="button-style" stylesheets="@../styles/style.css" text="Restart" textAlignment="CENTER">
            </Button>
            <Button fx:id="backToMenu" mnemonicParsing="false" onAction="#goBackToMenu" styleClass="button-style" stylesheets="@../styles/style.css" text="Back to Menu" textAlignment="CENTER">
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
